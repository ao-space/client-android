<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dp_259"
    android:layout_height="@dimen/dp_133"
    android:background="@drawable/background_ffffffff_rectangle_10">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_17"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_33"
        android:orientation="horizontal"
        android:background="@drawable/background_fff5f6fa_rectangle_6"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginEnd="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_11">

        <EditText
            android:id="@+id/dialog_input"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/dp_10"
            android:textColorHint="@color/white_ffdfe0e5"
            android:inputType="text"
            android:singleLine="true"
            android:gravity="start|center_vertical"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_13"
            android:textStyle="normal" />

        <ImageButton
            android:id="@+id/dialog_input_clear"
            android:layout_width="@dimen/dp_38"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp_11"
            android:paddingEnd="@dimen/dp_11"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:src="@drawable/icon_search_clear_2x"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white_fff7f7f9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/blue_ff337aff"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/white_fff7f7f9" />

        <Button
            android:id="@+id/dialog_confirm"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@color/blue_ff337aff"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>