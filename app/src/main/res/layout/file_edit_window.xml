<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_ffffffff_rectangle_top_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <ImageView
            android:id="@+id/file_image"
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginStart="@dimen/dp_23"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/more_edit_exit"
            android:layout_width="@dimen/dp_55"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/dp_19"
            android:paddingEnd="@dimen/dp_19"
            android:paddingTop="@dimen/dp_19"
            android:paddingBottom="@dimen/dp_19"
            android:src="@drawable/icon_exit"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_toEndOf="@id/file_image"
            android:layout_toStartOf="@id/more_edit_exit"
            android:layout_marginStart="@dimen/dp_10"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_17"
            android:textStyle="normal" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/more_edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_33">

    </LinearLayout>
</LinearLayout>