<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_52"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/title_btn_back"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_7"
        android:padding="@dimen/dp_17"
        android:scaleType="centerCrop"
        android:src="@drawable/back_2x" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_80"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            style="@style/s_17_ff333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_tv_sub"
            style="@style/s_12_ff85899c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_text_left"
        style="@style/s_17_ff337aff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_25"
        android:text="@string/cancel"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_text_right"
        style="@style/s_17_ff337aff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_25"
        android:text="@string/select_all"
        android:visibility="gone" />

</RelativeLayout>