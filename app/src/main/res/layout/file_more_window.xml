<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_ffffffff_rectangle_top_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/more"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_17"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/more_exit"
            android:layout_width="@dimen/dp_43"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/dp_7"
            android:paddingEnd="@dimen/dp_19"
            android:paddingTop="@dimen/dp_19"
            android:paddingBottom="@dimen/dp_7"
            android:src="@drawable/exit"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/file_choose_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginStart="@dimen/dp_23"
            android:src="@drawable/icon_select"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_23"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/choose"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_28"
        android:background="@color/white_fff7f7f9" />

    <LinearLayout
        android:id="@+id/recycle_bin_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginStart="@dimen/dp_23"
            android:src="@drawable/recycle_bin_fast"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_23"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/recycle_bin"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_29"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_25"
        android:background="@color/white_fff5f6fa"
        android:text="@string/sort_order"
        android:textAllCaps="true"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_12"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/sort_by_name_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/sort_by_name_image"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginStart="@dimen/dp_23"
            android:src="@drawable/ic_sort_name_off"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/sort_by_name_text"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sort_by_name"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sort_by_name_order"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginEnd="@dimen/dp_28"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_28"
        android:background="@color/white_fff7f7f9" />

    <LinearLayout
        android:id="@+id/sort_by_time_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/sort_by_time_image"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginStart="@dimen/dp_23"
            android:src="@drawable/ic_sort_time_off"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/sort_by_time_text"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sort_by_time"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sort_by_time_order"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginEnd="@dimen/dp_28"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_28"
        android:background="@color/white_fff7f7f9" />

    <LinearLayout
        android:id="@+id/sort_by_type_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:layout_marginBottom="@dimen/dp_35"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/sort_by_type_image"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginStart="@dimen/dp_23"
            android:src="@drawable/ic_sort_type_off"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/sort_by_type_text"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sort_by_type"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sort_by_type_order"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginEnd="@dimen/dp_28"
            android:scaleType="fitCenter" />
    </LinearLayout>
</LinearLayout>