<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_ffffffff_rectangel_top_10"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        style="@style/s_17_ff333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:textStyle="bold"
        android:text="@string/agreement_and_privacy"/>

    <TextView
        android:id="@+id/tv_auth_scope"
        style="@style/s_13_ff333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_29"
        android:layout_marginTop="@dimen/dp_29" />

    <TextView
        android:id="@+id/btn_positive"
        style="@style/s_15_ffffffff"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_75"
        android:gravity="center"
        android:text="@string/ok"
        android:textStyle="bold"
        android:background="@drawable/background_ff337aff_ff16b9ff_rectangle_10"/>


    <TextView
        android:id="@+id/btn_negative"
        style="@style/s_15_ff85899c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_35"
        android:textStyle="bold"
        android:text="不同意并退出"/>

</LinearLayout>