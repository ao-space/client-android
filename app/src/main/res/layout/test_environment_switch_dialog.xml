<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_360"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/environment_rc_xyz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/background_rectangle_10_stroke_ff337aff_1"
                android:text="rc_xyz"
                android:textAllCaps="false"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_16"
                android:textStyle="normal" />

            <Button
                android:id="@+id/environment_rc_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/background_rectangle_10_stroke_ff337aff_1"
                android:text="rc_top"
                android:textAllCaps="false"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_16"
                android:textStyle="normal" />

            <Button
                android:id="@+id/environment_dev"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/background_rectangle_10_stroke_ff337aff_1"
                android:text="dev"
                android:textAllCaps="false"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_16"
                android:textStyle="normal" />

            <Button
                android:id="@+id/environment_test"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/background_rectangle_10_stroke_ff337aff_1"
                android:text="test"
                android:textAllCaps="false"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_16"
                android:textStyle="normal" />

            <Button
                android:id="@+id/environment_qa"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/background_rectangle_10_stroke_ff337aff_1"
                android:text="qa"
                android:textAllCaps="false"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_16"
                android:textStyle="normal" />

            <Button
                android:id="@+id/environment_sit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/background_rectangle_10_stroke_ff337aff_1"
                android:text="sit"
                android:textAllCaps="false"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_16"
                android:textStyle="normal" />

            <Button
                android:id="@+id/environment_prod"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/background_rectangle_10_stroke_ff337aff_1"
                android:text="prod"
                android:textAllCaps="false"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_16"
                android:textStyle="normal" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>