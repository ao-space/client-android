<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/eulix_space_title_extension" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/initial_fail_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="72" />

            <ImageView
                android:layout_width="@dimen/dp_29"
                android:layout_height="@dimen/dp_29"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_exception_2x"
                android:scaleType="fitCenter" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="19" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:gravity="center_horizontal"
                android:text="@string/initialization_failure"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_17"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10" />

            <TextView
                android:id="@+id/initial_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:gravity="center_horizontal"
                android:textColor="@color/gray_ff85899c"
                android:textSize="@dimen/dp_13"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="48" />

            <TextView
                android:id="@+id/initial_return"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:gravity="center_horizontal"
                android:textColor="@color/blue_ff337aff"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="330" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/initial_progress_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25">

                <ImageView
                    android:id="@+id/initial_loading"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_page_loading"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/initial_progress_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/initial_loading"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:text="@string/initializing_ao_space"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_17"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/initial_progress_title"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_alignEnd="@id/initial_progress_title"
                    android:text="@string/initializing_tip"
                    android:textColor="@color/gray_ff85899c"
                    android:textSize="@dimen/dp_13"
                    android:textStyle="normal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="19" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_259"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:background="@drawable/background_fff5f6fa_rectangle_10">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/initial_step_1_image"
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:src="@drawable/icon_progress_on_2x"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/initial_step_1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="@string/binding_encrypt_channel"
                        android:textColor="@color/black_ff333333"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="4" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_38"
                    android:background="@color/white_ffdfe0e5"
                    android:layout_marginStart="@dimen/dp_26" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/initial_step_2_image"
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:src="@drawable/icon_progress_on_2x"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/initial_step_2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="@string/binding_file_service"
                        android:textColor="@color/black_ff333333"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="4" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_38"
                    android:background="@color/white_ffdfe0e5"
                    android:layout_marginStart="@dimen/dp_26" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/initial_step_3_image"
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:src="@drawable/icon_progress_on_2x"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/initial_step_3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="@string/binding_encrypt_gateway"
                        android:textColor="@color/black_ff333333"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="4" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_38"
                    android:background="@color/white_ffdfe0e5"
                    android:layout_marginStart="@dimen/dp_26" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/initial_step_4_image"
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:src="@drawable/icon_progress_on_2x"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/initial_step_4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="@string/binding_core_component"
                        android:textColor="@color/black_ff333333"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="20" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="228" />
        </LinearLayout>
    </RelativeLayout>

    <xyz.eulix.space.view.banner.AutoScrollBanner
        android:id="@+id/initial_advertisement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_67"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_38" />
</LinearLayout>