<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/eulix_space_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_29"
        android:background="@color/white_fff5f6fa"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_25"
        android:text="@string/accept_notification_message_type"
        android:textAllCaps="true"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_10"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/system_message"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="@string/system_message_hint"
                android:textColor="@color/gray_ff85899c"
                android:textSize="@dimen/dp_10"
                android:textStyle="normal" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/system_message_switch"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/background_bth_switch_state_with_able"
            android:button="@null" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:background="@color/white_fff7f7f9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/business_message"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="@string/business_message_hint"
                android:textColor="@color/gray_ff85899c"
                android:textSize="@dimen/dp_10"
                android:textStyle="normal" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/business_message_switch"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/background_bth_switch_state_with_able"
            android:button="@null" />
    </LinearLayout>
</LinearLayout>