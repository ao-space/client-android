<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/eulix_space_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_21" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/biometric_unlock_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fingerprint_face_unlock"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/biometric_unlock_switch"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_checkbox_close"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fingerprint_face_unlock_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/fingerprint_unlock_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fingerprint_unlock"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/fingerprint_unlock_switch"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_checkbox_close"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:id="@+id/fingerprint_face_unlock_split"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:background="@color/white_fff7f7f9"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/face_unlock_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/face_unlock"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/face_unlock_switch"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_checkbox_close"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_25"
        android:paddingTop="@dimen/dp_19"
        android:paddingBottom="@dimen/dp_19"
        android:background="@color/white_fff5f6fa"
        android:text="@string/application_lock_hint"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_12"
        android:textStyle="normal"
        android:lineSpacingExtra="@dimen/dp_2" />
</LinearLayout>