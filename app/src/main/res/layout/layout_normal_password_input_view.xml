<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:textColor="@color/black_ff333333"
            android:textColorHint="@color/c_ffbcbfcd"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/img_clean"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/icon_edit_clean"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_hide"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/icon_pwd_hide"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/split_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="@color/white_fff7f7f9" />
</RelativeLayout>