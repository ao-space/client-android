<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ad_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/icon_bg_history_today_default"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/shapeImageStyleRound10"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/s_12_ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/background_4d000000_rectangle_4"
        android:paddingLeft="@dimen/dp_6"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:src="@drawable/icon_banner_close"
        android:padding="@dimen/dp_6"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

</RelativeLayout>