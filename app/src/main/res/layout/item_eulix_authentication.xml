<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_115"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:background="@drawable/background_ffedf3ff_rectangle_10"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/authentication_image"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_38"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_29"
        android:layout_marginEnd="@dimen/dp_19">

        <TextView
            android:id="@+id/authentication_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_ff85899c"
            android:textSize="@dimen/dp_13"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/authentication_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_17"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_19"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right_2x" />
</LinearLayout>