<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_94"
    android:background="@drawable/album_item_select_bg"
    android:paddingLeft="@dimen/dp_25"
    android:paddingRight="@dimen/dp_25">


    <ImageView
        android:id="@+id/first_image"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/tv_folder_name"
        style="@style/s_17_ff333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_toRightOf="@id/first_image"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/image_num"
        style="@style/s_12_ff85899c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_folder_name"
        android:layout_alignLeft="@id/tv_folder_name"
        android:layout_marginTop="@dimen/dp_8"
        android:text="(0)" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_alignParentBottom="true"
        android:background="@color/white_fff7f7f9" />

    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/arrow_right" />
</RelativeLayout>