<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/dp_307"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/background_ffffffff_rectangle_10">

    <ImageView
        android:id="@+id/granter_avatar"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_58"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/granter_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/granter_domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_38"
        android:layout_marginEnd="@dimen/dp_38"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_13"
        android:textStyle="normal"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:text="@string/grantee_request_login_hint"
        android:textColor="@color/blue_ff337aff"
        android:textSize="@dimen/dp_17"
        android:textStyle="normal" />

    <Button
        android:id="@+id/grantee_cancel_request"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/dp_41"
        android:layout_marginBottom="@dimen/dp_28"
        android:text="@string/cancel_login"
        android:textAllCaps="false"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal" />
</LinearLayout>