<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/background_ffedf3ff_rectangle_10"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_102"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:src="@drawable/image_device_manage" />

    <TextView
        android:id="@+id/tv_device_name"
        style="@style/s_17_ff333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_29"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ip_address"
        style="@style/s_13_ff333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_device_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_19" />

    <ImageView
        android:id="@+id/img_device"
        android:layout_width="@dimen/dp_125"
        android:layout_height="@dimen/dp_106"
        android:layout_below="@id/tv_ip_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_19" />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="@dimen/dp_234"
        android:layout_height="@dimen/dp_42"
        android:layout_below="@id/img_device"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_29"
        android:background="@drawable/background_ff337aff_ff16b9ff_rectangle_10"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/white_ffffffff"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold" />
</RelativeLayout>
