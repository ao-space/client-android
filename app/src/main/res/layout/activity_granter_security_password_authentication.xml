<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <include layout="@layout/eulix_space_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="101" />

    <ImageView
        android:layout_width="@dimen/dp_115"
        android:layout_height="@dimen/dp_113"
        android:src="@drawable/image_terminal_2x"
        android:scaleType="fitCenter" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="44" />

    <TextView
        android:id="@+id/authentication_content"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="242"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/dp_11"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="44" />

    <Button
        android:id="@+id/granter_confirm_authentication"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_ff337aff_ff16b9ff_rectangle_10"
        android:text="@string/confirm_myself_operation"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal"
        style="?android:attr/borderlessButtonStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />

    <Button
        android:id="@+id/granter_cancel_authentication"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:text="@string/not_myself_operation"
        android:textAllCaps="false"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal"
        style="?android:attr/borderlessButtonStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="34" />
</LinearLayout>