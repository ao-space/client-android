<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/dp_259"
    android:layout_height="@dimen/dp_365"
    android:background="@drawable/background_ffffffff_rectangle_10">

    <ImageView
        android:id="@+id/version_update_image"
        android:layout_width="@dimen/dp_106"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_36"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:text="@string/find_new_version"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_update_content"
        android:layout_width="@dimen/dp_201"
        android:layout_height="@dimen/dp_158"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_9"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_13"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@color/white_fff7f7f9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="@string/update_now"
            android:textAllCaps="false"
            android:textColor="@color/blue_ff337aff"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>