<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/background_ffffffff_rectangle_top_10">

    <ImageButton
        android:id="@+id/dialog_exit"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_19"
        android:src="@drawable/icon_exit"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:layout_marginStart="@dimen/dp_55"
        android:layout_marginEnd="@dimen/dp_55"
        android:gravity="center"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_17"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/dialog_title"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25">

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_ff85899c"
            android:textSize="@dimen/dp_13"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/permission_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_67"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_38"
            android:layout_marginBottom="@dimen/dp_56"
            android:background="@drawable/background_fff5f6fa_rectangle_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/permission_hint"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_19"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/permission_indicator"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_19"
                android:src="@drawable/icon_checkbox_close"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>