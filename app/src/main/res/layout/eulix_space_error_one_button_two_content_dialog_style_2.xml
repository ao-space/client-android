<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/dp_259"
    android:layout_height="wrap_content"
    android:background="@drawable/background_ffffffff_rectangle_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_89">

        <ImageView
            android:id="@+id/dialog_image"
            android:layout_width="@dimen/dp_93"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/dialog_exit"
            android:layout_width="@dimen/dp_53"
            android:layout_height="@dimen/dp_53"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/dp_19"
            android:src="@drawable/exit"
            android:scaleType="fitCenter"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_34"
        android:layout_marginEnd="@dimen/dp_34"
        android:gravity="center_horizontal"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginStart="@dimen/dp_34"
        android:layout_marginEnd="@dimen/dp_34"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_13"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/dialog_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_34"
        android:layout_marginEnd="@dimen/dp_34"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_13"
        android:textStyle="normal" />

    <Button
        android:id="@+id/dialog_button"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginBottom="@dimen/dp_41"
        android:background="@drawable/background_ff337aff_ff16b9ff_rectangle_10"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal"
        style="?android:attr/borderlessButtonStyle" />
</LinearLayout>