<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/eulix_space_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:text="@string/did"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/did_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:paddingTop="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_13"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:textIsSelectable="true"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold"
        android:background="@drawable/background_ffedf3ff_rectangle_10_stroke_1_ff337aff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:text="@string/master_credential"
        android:textAllCaps="true"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_13"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:background="@drawable/background_fff5f6fa_rectangle_10">

        <LinearLayout
            android:id="@+id/ao_space_server_credential_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_14">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ao_space_server_credential"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/arrow_right_2x"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white_ffebecf0"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_marginEnd="@dimen/dp_19" />

        <LinearLayout
            android:id="@+id/bind_phone_credential_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_14">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bind_phone_credential"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/arrow_right_2x"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:text="@string/secondary_credential"
        android:textAllCaps="true"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_13"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:background="@drawable/background_fff5f6fa_rectangle_10">

        <RelativeLayout
            android:id="@+id/security_password_credential_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_14">

            <ImageView
                android:id="@+id/security_password_credential_indicator"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/arrow_right_2x"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/security_password_credential_not_set_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/security_password_credential_indicator"
                android:layout_marginEnd="@dimen/dp_6"
                android:text="@string/not_set"
                android:textColor="@color/red_fff6222d"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/security_password_credential"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />
        </RelativeLayout>

        <!--todo 辅助凭证扩展-->
    </LinearLayout>
</LinearLayout>