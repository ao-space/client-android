<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/security_setting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/security_setting_hint"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/red_fff6222d"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/security_setting_indicator"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_10"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_right_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/security_setting_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_12"
        android:textStyle="normal"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_18" />
</LinearLayout>