<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/eulix_space_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/icon_environment_2x"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/space_platform_environment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/current_environment_is"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/icon_server_2x"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/space_platform_server_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/server_url_is"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@color/white_fff7f7f9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_18"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_12"
                    android:background="@drawable/background_ff337aff_rectangle"/>

                <TextView
                    android:id="@+id/space_platform_what_benefit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="@string/switch_space_platform_what_benefit"
                    android:textAllCaps="true"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/space_platform_what_benefit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_13"
                android:textStyle="normal"
                android:lineSpacingExtra="@dimen/dp_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_12"
                    android:background="@drawable/background_ff337aff_rectangle"/>

                <TextView
                    android:id="@+id/space_platform_how_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="@string/switch_space_platform_how"
                    android:textAllCaps="true"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/space_platform_how_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_13"
                android:textStyle="normal"
                android:lineSpacingExtra="@dimen/dp_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_12"
                    android:background="@drawable/background_ff337aff_rectangle"/>

                <TextView
                    android:id="@+id/space_platform_other_precautions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="@string/other_precautions"
                    android:textAllCaps="true"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/space_platform_other_precautions_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_13"
                android:textStyle="normal"
                android:lineSpacingExtra="@dimen/dp_5" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/switch_space_platform"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_38"
        android:background="@drawable/background_ff337aff_ff16b9ff_rectangle_10"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal"
        style="?android:attr/borderlessButtonStyle" />
</LinearLayout>