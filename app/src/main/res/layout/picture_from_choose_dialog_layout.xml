<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/background_ffffffff_rectangle_10">

        <TextView
            android:id="@+id/btn_camera"
            style="@style/s_17_fff6222d"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_61"
            android:gravity="center"
            android:text="@string/from_camera"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white_fff7f7f9"/>
        <TextView
            android:id="@+id/btn_album"
            style="@style/s_17_fff6222d"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_61"
            android:gravity="center"
            android:text="@string/from_album"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_18"
        android:background="@drawable/background_ffffffff_rectangle_10">
        <TextView
            android:id="@+id/btn_cancel"
            style="@style/s_17_ff337aff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_61"
            android:gravity="center"
            android:text="@string/cancel"/>
    </LinearLayout>

</LinearLayout>