<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/eulix_space_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="51" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/box_searching"
        android:layout_width="@dimen/dp_188"
        android:layout_height="@dimen/dp_188"
        android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="9" />

    <TextView
        android:id="@+id/hardware_search_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="216"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hardware_verification_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/hardware_verification_hint_second"
            style="@style/s_13_ff333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/lan_searching_tip"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="36" />

    <Button
        android:id="@+id/start_search"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_85"
        android:background="@drawable/background_ff337aff_ff16b9ff_rectangle_10"
        android:text="@string/start_discovery"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal" />
</LinearLayout>