<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_ffffffff_rectangle_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_permission_top_storage" />

    <ImageView
        android:id="@+id/img_exit"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_33"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:src="@drawable/icon_alert_top_exit"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/s_13_ff333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_top"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_34"
        android:text="@string/tip_permission"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/s_13_ff85899c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_34" />

    <TextView
        android:id="@+id/btn_confirm"
        style="@style/s_15_ffffffff"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_below="@id/tv_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginBottom="@dimen/dp_29"
        android:background="@drawable/background_ff337aff_ff16b9ff_rectangle_10"
        android:gravity="center"
        android:text="@string/to_set"
        android:textStyle="bold" />

</RelativeLayout>