<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/upgrade_top_notification_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_2"
        android:background="@drawable/background_top_notification_2x"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_upgrade_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_top_notification_two"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/icon_notification_upgrade" />

            <TextView
                android:id="@+id/tv_top_notification_two_title"
                style="@style/s_15_ff333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/box_start_upgarde_title"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_top_notification_two_desc"
            style="@style/s_12_ff85899c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_upgrade_notice_title"
            android:layout_marginLeft="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/box_start_upgarde_desc" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top_notification_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_67"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_2"
        android:background="@drawable/background_top_notification_2x"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/top_notification_image"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_26"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/top_notification_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal" />

        <TextView
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/background_ffedf3ff_rectangle_12"
            android:gravity="center"
            android:text="@string/view_now"
            android:textColor="@color/blue_ff337aff"
            android:textSize="@dimen/dp_12"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>