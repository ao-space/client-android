<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffffff">

    <xyz.eulix.space.view.TitleBarWithSelect
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_done"
        style="@style/s_17_ff337aff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/title_bar"
        android:layout_alignBottom="@id/title_bar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_25"
        android:gravity="center"
        android:text="@string/done" />

    <EditText
        android:id="@+id/et_content"
        style="@style/s_15_ff333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/transparent"
        android:textColorHint="@color/c_ffbcbfcd" />

    <ImageView
        android:id="@+id/et_split"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/et_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/white_fff7f7f9" />

    <TextView
        android:id="@+id/et_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_split"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:text="@string/nickname_hint"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_12"
        android:textStyle="normal"
        android:visibility="gone" />
</RelativeLayout>