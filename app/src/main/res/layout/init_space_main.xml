<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/eulix_space_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/space_exclusive_logo"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_17"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/init_domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/gray_ff85899c"
            android:textSize="@dimen/dp_13"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:background="@color/white_fff7f7f9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/respective_country"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_17"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/init_country"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="中国"
            android:textColor="@color/gray_ff85899c"
            android:textSize="@dimen/dp_13"
            android:textStyle="normal" />
        
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_right_2x"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:background="@color/white_fff7f7f9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/choose_language"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_17"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/init_language"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="简体中文"
            android:textColor="@color/gray_ff85899c"
            android:textSize="@dimen/dp_13"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_right_2x"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="92" />

    <include layout="@layout/eulix_space_common_loading_button_container"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="347" />
</LinearLayout>