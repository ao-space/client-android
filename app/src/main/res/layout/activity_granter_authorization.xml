<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <include layout="@layout/eulix_space_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="53" />

    <ImageView
        android:id="@+id/granter_avatar"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_96"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/granter_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_67"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:gravity="bottom|center_horizontal"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <TextView
        android:id="@+id/granter_domain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:gravity="center_horizontal"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_13"
        android:textStyle="normal" />

    <CheckBox
        android:id="@+id/authorization_automatic_login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_90"
        android:button="@drawable/checkbox_state_selector"
        android:checked="true"
        android:paddingStart="@dimen/dp_10"
        android:text="@string/automatic_login_hint"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_12"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="112" />

    <Button
        android:id="@+id/granter_confirm_request"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_ff337aff_ff16b9ff_rectangle_10"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal"
        style="?android:attr/borderlessButtonStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />

    <Button
        android:id="@+id/granter_cancel_request"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/gray_ff85899c"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal"
        style="?android:attr/borderlessButtonStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="94" />
</LinearLayout>