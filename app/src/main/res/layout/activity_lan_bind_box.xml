<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/bind_device_mantle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/dp_8"
        android:src="@color/white_4dffffff"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/eulix_space_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="51" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/device_searching"
            android:layout_width="@dimen/dp_188"
            android:layout_height="@dimen/dp_188"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="19" />

        <TextView
            android:id="@+id/device_search_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:layout_marginStart="@dimen/dp_54"
            android:layout_marginEnd="@dimen/dp_54"
            android:gravity="center_horizontal" />
        
        <TextView
            android:id="@+id/device_search_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_240"
            android:layout_marginStart="@dimen/dp_54"
            android:layout_marginEnd="@dimen/dp_54"
            android:gravity="center_horizontal"
            android:textSize="@dimen/dp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="8" />

        <Button
            android:id="@+id/bind_device_function"
            android:layout_width="@dimen/dp_192"
            android:layout_height="@dimen/dp_42"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_ff337aff_ff16b9ff_rectangle_10"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal"
            android:visibility="invisible"
            style="?android:attr/borderlessButtonStyle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="85" />
    </LinearLayout>
</RelativeLayout>