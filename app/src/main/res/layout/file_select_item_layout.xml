<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_79">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_25"/>

    <TextView
        android:id="@+id/tv_file_name"
        style="@style/s_15_ff333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_item"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_54"
        android:gravity="left"
        android:lines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tv_create_time"
        style="@style/s_12_ff85899c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_file_name"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_alignLeft="@id/tv_file_name"
        android:layout_alignRight="@id/tv_file_name"
        android:gravity="left"
        android:lines="1"
        android:ellipsize="end" />


    <ImageView
        android:id="@+id/image_mark"
        android:layout_width="@dimen/dp_21"
        android:layout_height="@dimen/dp_21"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_25"
        android:scaleType="centerInside"
        android:src="@drawable/background_fff5f6fa_oval_13"/>

    <ImageView
        android:id="@+id/image_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/white_fff7f7f9"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"/>

</RelativeLayout>