<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/eulix_space_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/background_fff5f6fa_rectangle_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_19"
                    android:text="@string/mac"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/mac_address"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_19"
                    android:layout_marginEnd="@dimen/dp_19"
                    android:gravity="end"
                    android:textColor="@color/gray_ff85899c"
                    android:textSize="@dimen/dp_13"
                    android:textStyle="normal" />
            </LinearLayout>

            <!--已连接网络可见-->
            <LinearLayout
                android:id="@+id/network_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="vertical"
                android:background="@drawable/background_fff5f6fa_rectangle_10"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_19"
                        android:text="@string/ipv4"
                        android:textColor="@color/black_ff333333"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/ipv4_address"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_19"
                        android:layout_marginEnd="@dimen/dp_19"
                        android:gravity="end"
                        android:textColor="@color/gray_ff85899c"
                        android:textSize="@dimen/dp_13"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_19"
                    android:layout_marginEnd="@dimen/dp_19"
                    android:background="@color/white_ffebecf0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_19"
                        android:text="@string/ipv6"
                        android:textColor="@color/black_ff333333"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/ipv6_address"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_19"
                        android:layout_marginEnd="@dimen/dp_19"
                        android:gravity="end"
                        android:textColor="@color/gray_ff85899c"
                        android:textSize="@dimen/dp_13"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_19"
                    android:layout_marginEnd="@dimen/dp_19"
                    android:background="@color/white_ffebecf0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_19"
                        android:text="@string/dns_1"
                        android:textColor="@color/black_ff333333"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/dns1_address"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_19"
                        android:layout_marginEnd="@dimen/dp_19"
                        android:gravity="end"
                        android:textColor="@color/gray_ff85899c"
                        android:textSize="@dimen/dp_13"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_19"
                    android:layout_marginEnd="@dimen/dp_19"
                    android:background="@color/white_ffebecf0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_19"
                        android:text="@string/dns_2"
                        android:textColor="@color/black_ff333333"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/dns2_address"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_19"
                        android:layout_marginEnd="@dimen/dp_19"
                        android:gravity="end"
                        android:textColor="@color/gray_ff85899c"
                        android:textSize="@dimen/dp_13"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <!--未连接无线网络可见-->
            <Button
                android:id="@+id/access_network"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/background_ffedf3ff_rectangle_10"
                android:text="@string/join_this_network"
                android:textAllCaps="false"
                android:textColor="@color/blue_ff337aff"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal"
                style="?android:attr/borderlessButtonStyle"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:text="@string/ipv4"
                android:textAllCaps="true"
                android:textColor="@color/gray_ff85899c"
                android:textSize="@dimen/dp_13"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/ipv4_config_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/background_fff5f6fa_rectangle_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_19"
                    android:text="@string/setting"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/ipv4_config_dhcp"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_19"
                    android:gravity="end"
                    android:textColor="@color/gray_ff85899c"
                    android:textSize="@dimen/dp_13"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:src="@drawable/arrow_right_2x"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:text="@string/ipv6"
                android:textAllCaps="true"
                android:textColor="@color/gray_ff85899c"
                android:textSize="@dimen/dp_13"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/ipv6_config_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/background_fff5f6fa_rectangle_10">

                <TextView
                    android:id="@+id/ipv6_config_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_19"
                    android:textColor="@color/black_ff333333"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/ipv6_config_dhcp"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_19"
                    android:gravity="end"
                    android:textColor="@color/gray_ff85899c"
                    android:textSize="@dimen/dp_13"
                    android:textStyle="normal"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:src="@drawable/arrow_right_2x"
                    android:scaleType="fitCenter"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!--已连接无线网络可见-->
            <Button
                android:id="@+id/ignore_network"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/background_ffedf3ff_rectangle_10"
                android:text="@string/ignore_this_network"
                android:textAllCaps="false"
                android:textColor="@color/blue_ff337aff"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal"
                style="?android:attr/borderlessButtonStyle"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>