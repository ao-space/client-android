<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_fff5f6fa">

    <include layout="@layout/eulix_space_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/background_ffffffff_rectangle_10">

        <LinearLayout
            android:id="@+id/security_setting_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/security_setting_hint"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_10"
                android:gravity="end"
                android:textColor="@color/red_fff6222d"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_right_arrow" />
        </LinearLayout>

        <View
            android:id="@+id/security_setting_split"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/white_fff7f7f9"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/eulix_device_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/device"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/white_fff7f7f9" />

        <LinearLayout
            android:id="@+id/message_notification_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notification"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/white_fff7f7f9" />

        <LinearLayout
            android:id="@+id/eulix_privacy_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/privacy"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/white_fff7f7f9" />

        <LinearLayout
            android:id="@+id/eulix_general_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/general"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_right_arrow" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/background_ffffffff_rectangle_10">

        <LinearLayout
            android:id="@+id/developer_options_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/developer_options"
                android:textColor="@color/black_ff333333"
                android:textSize="@dimen/dp_15"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_right_arrow" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/change_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/background_ffffffff_rectangle_10"
        android:text="@string/change_account"
        android:textAllCaps="false"
        android:textColor="@color/black_ff333333"
        android:textSize="@dimen/dp_15"
        android:textStyle="normal"
        style="?android:attr/borderlessButtonStyle" />
</LinearLayout>