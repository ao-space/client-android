<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_ffffffff_rectangle_top_10">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5" />

    <include layout="@layout/eulix_space_title_extension" />
    
    <LinearLayout
        android:id="@+id/security_type_ssl_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_28"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/security_type_ssl_text"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SSL"
            android:textAllCaps="true"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal" />
        
        <ImageView
            android:id="@+id/security_type_ssl_indicator"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginStart="@dimen/dp_3"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_28"
        android:background="@color/white_fff7f7f9" />

    <LinearLayout
        android:id="@+id/security_type_none_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_99"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/security_type_none_text"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/none"
            android:textAllCaps="true"
            android:textColor="@color/black_ff333333"
            android:textSize="@dimen/dp_15"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/security_type_none_indicator"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginStart="@dimen/dp_3"
            android:scaleType="fitCenter" />
    </LinearLayout>
</LinearLayout>